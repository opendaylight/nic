    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.aries.blueprint</groupId>
                <artifactId>blueprint-maven-plugin</artifactId>
            </plugin>
            <!--<plugin>-->
                <!--<groupId>org.eclipse.xtend</groupId>-->
                <!--<artifactId>xtend-maven-plugin</artifactId>-->
            <!--</plugin>-->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <!-- This bundle works with Karaf 3 and 4.0, see https://wiki.opendaylight.org/view/Karaf_4_migration#Karaf_CLI_commands -->
                        <Import-Package>
                            *,
                            com.sun.jersey.spi.container.servlet,
                            org.eclipse.jetty.servlets;version="[8.1,10)",
                            org.opendaylight.aaa.shiro.filters,
                            org.opendaylight.aaa.shiro.realm,
                            org.opendaylight.aaa.shiro.web.env,
                            org.apache.shiro.web.env
                            org.apache.karaf.shell.commands.*;version="[3.0.0,4.1)",
                            org.apache.karaf.shell.console.*;version="[3.0.0,4.1)",
                            org.apache.karaf.shell.*;version="[3.0.0,4.1)",
                            *
                        </Import-Package>
                        <Web-ContextPath>/nic</Web-ContextPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

