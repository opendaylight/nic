module router-group {
    yang-version 1;
    namespace "urn:opendaylight:nic:network:mapping:router:group";
    prefix "router-group";

    grouping router-group {
        leaf router-group-id {
            type string;
            mandatory true;
            description "Uniquely identifier for Router Group.";
        }

        list routers-id {
            key "router-id";
            leaf router-id {
                type string;
            }
        }
    }

    container router-groups {
        list router-group {
            key "router-group-id";
            uses router-group;
        }
    }
}