module intent-mapping-hazelcast-impl {
    yang-version 1;
    namespace "urn:opendaylight:params:xml:ns:yang:intent:mapping:hazelcast:impl";
    prefix "intent-mapping-hazelcast-impl";

    import config { prefix config; revision-date 2013-04-05; }
    import opendaylight-md-sal-binding { prefix md-sal-binding; revision-date 2013-10-28;}
    import intent-mapping { prefix mapping-svc; revision-date 2015-11-11;}

    description
        "Service definition for intent-mapping-hazelcast implementation module";

    revision "2015-11-11" {
        description "Initial revision of intent-mapping-hazelcast model";
    }

    identity intent-mapping-hazelcast-impl {
        base config:module-type;
        // Specifies the prefix for generated Java classes.
        config:java-name-prefix HazelcastMappingService;
        config:provided-service  mapping-svc:intent-mapping-service;
    }

    augment "/config:modules/config:module/config:configuration" {
        case intent-mapping-hazelcast-impl {
            when "/config:modules/config:module/config:type = 'intent-mapping-hazelcast-impl'";
            container broker {
                uses config:service-ref {
                    refine type {
                        mandatory true;
                        config:required-identity md-sal-binding:binding-broker-osgi-registry;
                    }
                }
            }
        }
    }
}
