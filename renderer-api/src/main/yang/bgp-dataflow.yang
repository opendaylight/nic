module bgp-dataflow {
    namespace "urn:opendaylight:nic:renderer:api:bgp:dataflow";
    prefix "bgp-dataflow";

    import ietf-yang-types { prefix "yang"; }
    import ietf-inet-types { prefix "inet"; }

    revision 2017-05-18 {
        description "First revision.";
    }

    grouping bgp-dataflow {
        leaf id {
            type string;
            mandatory true;
            description "Uniquely identifier for gbp-dataflow";
        }

        leaf prefix {
            type inet:ipv4-prefix;
            mandatory true;
            description "Route prefix.";
        }

        leaf path-id {
            type uint32;
            mandatory true;
            description "Route path ID.";
        }

        leaf global-ip {
            type inet:ipv4-address;
            mandatory true;
            description "Route Global IP";
        }

        leaf originator-ip {
            type inet:ipv4-address;
            mandatory true;
            description "Route Originator IP";
        }

        list as-numbers {
            key "as-number";
            leaf as-number {
                type inet:as-number;
            }
            description "Authonomous System numbers.";
        }
    }

    container bgp-dataflows {
        list bgp-dataflow {
            key "id";
            uses bgp-dataflow;
        }
    }
}